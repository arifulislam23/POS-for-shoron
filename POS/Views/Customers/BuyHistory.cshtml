@model POS.ViewModels.CustomerBuyHistoryViewModel

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header">
                    <h3 class="text-center">Invoice History</h3>
                </div>
                <div class="card-body">
                    <div class="customer-info mb-4">
                        <h5>Customer Information</h5>
                        <div class="row">
                            <div class="col-md-6">
                                <p><strong>Name:</strong> @Model.Customer.CustomerName</p>
                                <p><strong>Email:</strong> @Model.Customer.Email</p>
                            </div>
                            <div class="col-md-6">
                                <p><strong>Phone:</strong> @Model.Customer.PhoneNumber</p>
                                <p><strong>Address:</strong> @Model.Customer.Address</p>
                            </div>
                        </div>
                    </div>

                    <table class="table">
                        <thead style="background: #2A3F54; color:white">
                            <tr>
                                <th scope="col">Product</th>
                                <th scope="col">Quantity</th>
                                <th scope="col">Sell Price</th>
                                <th scope="col">Date</th>
                                <th scope="col">Time</th>
                                <!-- Add more columns as needed -->
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var sellHistory in Model.SellHistory)
                            {
                                <tr>
                                    <td>@sellHistory.Product.Name</td>
                                    <td>@sellHistory.Quantity</td>
                                    <td>@sellHistory.SellPrice</td>
                                    <td>@sellHistory.CreateAt.ToShortDateString()</td>
                                    <td>@sellHistory.CreateAt.ToShortTimeString()</td>
                                    <!-- Add more cells as needed -->
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="mt-3">
                <a asp-action="CustomerList" class="btn btn-secondary">Back to List</a>
            </div>
        </div>
    </div>
</div>
