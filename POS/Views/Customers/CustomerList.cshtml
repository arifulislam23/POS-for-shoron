@model List<POS.DataModels.Customer>

<h2>Customer List</h2>

<div class="x_panel">
    <table class="table table-bordered table-hover table-striped">
        <thead style="background: #2A3F54; color:white">
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Email</th>
                <th>Phone Number</th>
                <th>Address</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var customer in Model)
            {
                <tr>
                    <td>@customer.CustomerId</td>
                    <td>@customer.CustomerName</td>
                    <td>@customer.Email</td>
                    <td>@customer.PhoneNumber</td>
                    <td>@customer.Address</td>
                    <td>
                        <a asp-action="Update" asp-route-id="@customer.CustomerId" class="btn-sm" style="background-color: #2A3F54; color:white">Edit</a>
                        <a asp-action="BuyHistory" asp-route-id="@customer.CustomerId" class="btn-sm btn-warning">History</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
